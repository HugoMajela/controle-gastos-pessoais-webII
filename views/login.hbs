<div class="container mt-5">
    <div class="row shadow-sm" style="max-width: 800px; margin: auto;">
        <div class="col-md-6 bg-success text-white p-5 d-flex flex-column align-items-center justify-content-center">
            <h2>Finance+</h2>
            <p>Controle suas finanças com facilidade e segurança</p>
            <i class="bi bi-pie-chart" style="font-size: 4rem;"></i>
        </div>

        <div class="col-md-6 bg-white p-5">
            <h2 class="mb-4">Login</h2>

            {{#if erro}}
            <div class="alert alert-danger">{{erro}}</div>
            {{/if}}

            <form action="/usuario/login" method="post">
                <div class="mb-3">
                    <label>Email</label>
                    <input type="email" name="email" class="form-control" placeholder="Digite seu email" required>
                </div>
                <div class="mb-3">
                    <label>Senha</label>
                    <input type="password" name="senha" class="form-control" placeholder="Digite sua senha" required>
                </div>
                <button type="submit" class="btn btn-success w-100">Entrar</button>
            </form>

            <p class="mt-3">Não tem conta? <a href="/usuario/cadastro">Cadastre-se</a></p>
        </div>
    </div>
</div>