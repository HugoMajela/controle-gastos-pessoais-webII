<div class="container mx-auto mt-5">
    <div class="row shadow-sm card-login rounded-5 " >
        <div class="col-md-6 p-5 d-flex flex-column align-items-center container-login rounded-start-5  ">
            <h2 class="font-logo">HLFinance+</h2>
            <p class="text-center">Controle suas finanças com facilidade e segurança</p>
            <img src="/images/imagem-ilustrativa.png" alt="Mulher fazendo sua gestão financeira " class="img-login">
        </div>

        <div class="col-md-6 bg-white p-5 rounded-end-5">
            <h2 class="mb-4 font-logo text-center">Login</h2>

            {{#if erro}}
            <div class="alert alert-danger">{{erro}}</div>
            {{/if}}

            <form action="/usuario/login" method="post">
                <div class="mb-3">
                    <label>Email</label>
                    <input type="email" name="email" class="form-control" placeholder="Digite seu email" required>
                </div>
                <div class="mb-3">
                    <label>Senha</label>
                    <input type="password" name="senha" class="form-control" placeholder="Digite sua senha" required>
                </div>
                <button type="submit" class="btn btn-success w-100"><i class="bi bi-box-arrow-in-right"></i> Entrar</button>
            </form>

            <p class="mt-3 text-center">Não tem conta? <a href="/usuario/cadastro">Cadastre-se</a></p>
        </div>
    </div>
</div>