<div class="container mt-5">
    <div class="card p-4 shadow-sm" style="max-width: 700px; margin: auto;">
        <h2 class="text-center mb-4">Cadastro</h2>

        {{#if erro}}
        <div class="alert alert-danger">{{erro}}</div>
        {{/if}}

        <form action="/usuario/cadastro" method="post" class="row g-3">
            <div class="col-md-6">
                <label>Nome</label>
                <input type="text" name="nome" class="form-control" placeholder="Digite seu nome" required>
            </div>
            <div class="col-md-6">
                <label>Email</label>
                <input type="email" name="email" class="form-control" placeholder="Digite seu email" required>
            </div>
            <div class="col-md-6">
                <label>Senha</label>
                <input type="password" name="senha" class="form-control" placeholder="Digite sua senha" required>
            </div>
            <div class="col-md-6">
                <label>Confirme a sua senha</label>
                <input type="password" name="confirmar_senha" class="form-control" placeholder="Digite sua senha" required>
            </div>
            <div class="col-md-12">
                <label>Renda mensal</label>
                <input type="number" step="0.01" name="renda" class="form-control" placeholder="Digite sua renda mensal" required>
            </div>
            <div class="text-center mt-3">
                <button type="submit" class="btn btn-success px-5">Cadastrar</button>
            </div>
        </form>
    </div>
</div>